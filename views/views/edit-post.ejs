<%- include('includes/header') %>
  <!-- header included end -->
  <div class="overlay">

    <article class="flexContainer">
      <a href="/">
        <img class="logo" src="/images2/logo.png" alt="Floc logo">
      </a>
      <div class="title">
        <h1 class="title">Community</h1>
      </div>
    </article>
    <img class="menu_icon item" src="./images/menu_icon.png">


    <div id="individual_post_container" class="container py-md-5 container--narrow">

      <%- include('includes/flash') %>
        <p> <a class="small font-weight-bold " href="/post/<%= post._id %>"> &laquo; back to the page.</a> </p>

        <form action="/post/<%= post._id %>/edit" method="POST">
          <div class="form-group">
            <label for="post-title" class="text-muted mb-1"><small>Title</small></label>
            <input required name="title" value="<%= post.title %>" id="post-title"
              class="form-control form-control-lg form-control-title" type="text" placeholder="" autocomplete="off">
          </div>

          <div class="form-group">
            <label for="post-body" class="text-muted mb-1"><small>Body Content</small></label>
            <textarea required name="body" id="post-body" class="body-content tall-textarea form-control" type="text"><%= post.body %>
        </textarea>
          </div>
          <br>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">

          <button class="btn btn-primary">Save Updates</button>
        </form>
    </div>
  </div>


  <!-- footer begins -->
  <%- include('includes/footer') %>